{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 20",

    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",

        "lib": ["es2023"],
        "module": "commonjs",
        "target": "es2022",

        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node"
    }
}
